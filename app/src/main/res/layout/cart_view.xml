<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0C0C0">

	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="5dip" >

            <TextView
                android:id="@+id/items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEMS"
                android:textColor="#29303E"
                android:layout_marginLeft="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/items_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1)"
                android:textColor="#29303E"
                android:layout_alignLeft="@+id/items"
                android:layout_marginLeft="45dip"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:padding="5dp"
                android:layout_marginBottom="15dip"
                android:text="TOTAL: "
                android:layout_toLeftOf="@+id/rupee1"
                android:textColor="#BEBFC3" />

            <Button
                android:id="@+id/rupee1"
                android:layout_height="12dip"
                android:layout_width="12dip"
                android:background="@drawable/rupee1"
                android:layout_gravity="right"
                android:layout_marginTop="6dip"
                android:layout_toLeftOf="@+id/ttlbillTextView"/>

            <TextView
                android:id="@+id/ttlbillTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.07"
                android:padding="5dp"
                android:layout_marginRight="8dip"
                android:layout_marginBottom="15dip"
                android:text="PRICE"
                android:layout_alignParentRight="true"
                android:textColor="#29303E" />

            <TextView
                android:id="@+id/priceWithCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.07"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5DCFB3"
                android:textSize="12dp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/lsUserCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector" >
        </ListView>
    </LinearLayout>

</LinearLayout>